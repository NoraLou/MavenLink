  <body ng-controller = "MainCtrl">

    <header id = "header">
      <h1>todos</h1>
    </header>


     <div id = "drop-form">
      <div ng-hide ="!dropped">
        <form ng-controller="formController as form"
          name = "todoAdd"
          class= "container form"
          ng-submit= "form.submit(todoAdd.$valid, formData)">
          <div style = "">
            <h2 style="">Add a List Item ...</h2>
          </div>
          <input type="text"
            focus-on="dropped"
            id= "textInput"
            class="input-grey"
            ng-model="formData.text"
            name="todo"
            placeholder = "Please enter a List Item ..."
            required/>
        </form>
      </div>
      <div id="peek">
        <button class = "circle" id = "drop-button"
          ng-click = "dropped = !dropped">
          <i class="fa fa-plus"></i>
        </button>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
